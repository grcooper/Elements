        <arguments>
          <argument>
            <kind>1</kind>
            <string>//Destroy when the health is less than 1
if (eHealth &lt; 1)
{
    score += points;
    eDead += 1;
    //Spawn boss if all the required enemies are destroyed
    if(boss == true)
    {
        winCond = true;
    }
    instance_destroy();
}
if(instance_position(x,y + wallSpace,wall_obj))
{
    vspeed = 0;
    eFire = false;
    eMeleeReload --;
    if(eMeleeReload == 0)
    {
        wallHealth -= eMDamage;
        eMeleeReload = eMeleeReloadStart;
    }
}
else if (paused)
{
    vspeed = 0;
}
else
{
    vspeed = eSpeed;
}

//Allow for firing missiles if the enemy has that ability
if (eFire)
{
    if(eReload &lt;= 0)
    {
        globalvar eMissVSpeed;
        globalvar eMissHSpeed;
        if(boss)
        {
            eMissVSpeed = 10;
            eMissHSpeed = sin(y) * 5;
        }
        else 
        {
            eMissVSpeed = 20;
            eMissHSpeed = 0;
        }
        
        
        instance_create(x,y,monsterMissile_obj);
        eReload = eStartReload;
    }
    else
    {
        eReload--;
    }   
}

////////////////////////////////////
//Special Actions
///////////////////////////////////


//using just if, to count for two elements

//Set on fire, damage over time
if (mPower == "burn" || mPower2 == "burn")
{   
    
    if((mBurnTimer % 30) == 0)
    {
        instance_create(x,y,burnPart_obj);
        eHealth -= 1;
    }
    if (mBurnTimer &lt;= 60)
    {
        mBurnTimer += 1;
    }
    else
    {
        if (mPower == "burn")
        {
            mPower = "";
            mBurnTimer = 1;
        }
        else
        {
            mPower2 = "";
            mBurnTimer = 1;
        }
    }
}
//Create two more short range missiles on impact
if (mPower == "splash" || mPower2 = "splash")
{
    var xSpawn;
    if(boss == true)
    {
        xSpawn = 40;
    }
    else
    {
        xSpawn = 24;
    }
    if (instance_nearest(x,y, missile_obj) != mCurInst)
    {
        splashLeft = true;
        instance_create(x - xSpawn,y,splash_obj);
        splashLeft = false;
        instance_create(x + xSpawn, y, splash_obj);
    }
    
    if (mPower == "splash")
    {
        mPower = "";
    }
    else
    {
        mPower2 = "";
    }
}
//Move backward on impact
if (mPower = "push" || mPower2 = "push")
{
    if ((instance_nearest(x,y, missile_obj) != mCurInst) || !pushed)
    {
        y -= 10;
        pushed = true;
    }
    if (mPower == "push")
    {
        mPower = "";
        pushed = false;
    }
    else
    {
        mPower2 = "";
        pushed = false;
    }
}

//Destroy on game over so no enemies damage the wall etc.
if(gameOver)
{
    instance_destroy();
}
